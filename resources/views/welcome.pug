
extends layout/app.pug

block content
	div.mt-8.py-10
		div.max-w-7xl.mx-auto.px-4(class='sm:px-6 lg:px-8')
			div.py-2(class='sm:text-center lg:text-center')
				img.flex.justify-center.mx-auto(src="/public/img/logo_alt.png" alt="RubyNight Logo")
				h1(class='mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl') Welcome to RubyNight
				p.text-base.text-indigo-700.font-semibold.tracking-wide The web framework for night owls
				br
				div.mx-10.pt-15
					div(class="max-w-md mx-auto grid gap-6 mb-8 md:grid-cols-2")
						div(class="min-w-0 p-4 rounded-lg shadow-xs dark:bg-gray-800")
							a(class="text-indigo-500" href="#")
								h3(class="dark:text-text-gray-300") Documentation
						div(class="min-w-0 p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800")
							a(class="text-indigo-500" href="#")
								h3(class="dark:text-text-gray-300") News
						div(class="min-w-0 p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800")
							a(class="text-indigo-500" href="#")
								h3(class="dark:text-text-gray-300") Community
						div(class="bg-white min-w-0 p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800")
							a(class="text-indigo-500" href="#")
								h3(class="dark:text-text-gray-300") Tutorials
		p.px-4.float-right Version #{$version}

